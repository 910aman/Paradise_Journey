<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="hill"
            type="com.example.paradise_journey.paradise_Journey.second_Page.model_Class.Db_page_Model_one" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".paradise_Journey.second_Page.fragment_Dashboard_two.after_Category_pageFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:id="@+id/CV_one"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/ImgView_HillStation"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:background="@color/white" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_DestinationName"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="202dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="@{hill.name}"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/CV_two"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="220dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/max_heightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Height Of Hill :"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/max_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="115dp"
                    android:layout_marginTop="30dp"
                    android:text="@{hill.height}"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/Address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    android:text="Address :"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="60dp"
                    android:maxLength="100"
                    android:text="@{hill.address}"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/Description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="100dp"
                    android:text="Description :"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="105dp"
                    android:layout_marginTop="100dp"
                    android:maxLength="150"
                    android:text="@{hill.description}"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </FrameLayout>
</layout>